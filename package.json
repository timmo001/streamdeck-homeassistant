{
  "name": "streamdeck-homeassistant",
  "homepage": "./",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "autoprefixer": "10.2.1",
    "babel-preset-react-app": "10.0.0",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chalk": "4.1.0",
    "css-loader": "5.0.1",
    "dotenv": "8.2.0",
    "dotenv-expand": "5.1.0",
    "eslint": "7.18.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "6.2.0",
    "fs-extra": "9.0.1",
    "html-webpack-plugin": "4.5.1",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "4.1.0",
    "promise": "8.1.0",
    "query-string": "6.13.8",
    "raf": "3.4.1",
    "react": "17.0.1",
    "react-dev-utils": "11.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "react-streamdeck": "1.2.3",
    "resolve": "1.19.0",
    "style-loader": "2.0.0",
    "sw-precache-webpack-plugin": "1.0.0",
    "url-loader": "4.1.1"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.21",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cross-env": "7.0.3",
    "eslint-plugin-react-hooks": "4.2.0",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "typescript": "4.1.3",
    "unzipper": "0.10.11"
  },
  "scripts": {
    "start": "echo \"Use yarn|npm dev or dev:watch to use this plugin\"",
    "build": "react-scripts build",
    "test": "node scripts/test.js --env=jsdom",
    "export:base": "node scripts/export.js",
    "export": "npm-run-all -s build export:base",
    "dev:base": "node scripts/dev.js",
    "dev": "cross-env NODE_ENV=development yarn build && yarn dev:base",
    "dev:watch": "nodemon --ext ts,tsx,js,css,html --watch public --watch src --exec \"yarn dev\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(ts|tsx|js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}

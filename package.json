{
  "name": "streamdeck-homeassistant",
  "homepage": "./",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "eslint": "7.18.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-react": "7.22.0",
    "query-string": "6.13.8",
    "react": "17.0.1",
    "react-dev-utils": "11.0.1",
    "react-dom": "17.0.1",
    "react-scripts": "4.0.1",
    "react-streamdeck": "1.2.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.21",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cross-env": "7.0.3",
    "eslint-plugin-react-hooks": "4.2.0",
    "nodemon": "2.0.7",
    "typescript": "4.1.3",
    "unzipper": "0.10.11"
  },
  "scripts": {
    "start": "echo \"Use yarn|npm dev or dev:watch to use this plugin\"",
    "build:dev": "react-scripts build",
    "build": "react-scripts build --production",
    "test": "node scripts/test.js --env=jsdom",
    "export:base": "node scripts/export.js",
    "export": "npm-run-all -s build export:base",
    "dev:base": "node scripts/dev.js",
    "dev": "cross-env NODE_ENV=development yarn build:dev && yarn dev:base",
    "dev:watch": "nodemon --ext ts,tsx,js,css,html --watch public --watch src --exec \"yarn dev\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:react/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  }
}
